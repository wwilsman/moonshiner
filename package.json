{
  "name": "moonshiner",
  "description": "High-proof testing",
  "version": "1.0.0-beta.16",
  "license": "MIT",
  "type": "module",
  "files": [
    "lib"
  ],
  "main": "lib/harness.js",
  "exports": {
    ".": {
      "node": "./lib/harness.node.js",
      "default": "./lib/harness.js"
    },
    "./reporters": {
      "default": "./lib/reporter/index.js"
    },
    "./reporter/*": {
      "default": "./lib/reporter/*.js"
    },
    "./plugins": {
      "node": "./lib/plugin/index.node.js",
      "default": "./lib/plugin/index.js"
    },
    "./plugin/*": {
      "default": "./lib/plugin/*.js"
    }
  },
  "bin": {
    "moonshiner": "bin/moonshiner",
    "test": "bin/moonshiner"
  },
  "scripts": {
    "lint": "eslint .",
    "test:coverage": "c8 npm run test",
    "test": "node tests/all.test.js"
  },
  "dependencies": {
    "cross-spawn": "^7.0.3",
    "extract-zip": "^2.0.1",
    "glob": "^10.4.1",
    "mime": "^4.0.3",
    "rimraf": "^5.0.7",
    "tar-fs": "^3.0.6",
    "unbzip2-stream": "^1.4.3",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "c8": "^10.1.2",
    "eslint": "^9.5.0",
    "globals": "^15.5.0",
    "neostandard": "^0.7.0"
  }
}
